# ============================================================================
# YouTube Web Automation Analysis - Environment Configuration
# ============================================================================

# Application Settings
APP_NAME=YouTube-Web-Automation-Analysis
APP_VERSION=0.1.0
ENV=development


# API Configuration (FastAPI Server)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_DEBUG=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Database Configuration
# ============================================================================
DB_URL=sqlite:///./youtube_automation.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================================================
# Cache Configuration
# ============================================================================
AI_CACHE_ROOT=../AI_LLM_projects/ai_warehouse/cache
CACHE_REDIS_ENABLE=false
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_AUTO_CLEANUP=true
CACHE_MAX_CACHE_SIZE_GB=50


# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_REDIS_ENABLE=false
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_AUTO_CLEANUP=true
CACHE_MAX_CACHE_SIZE_GB=50



# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/youtube_automation.log

# ============================================================================
# YouTube API Settings
# ============================================================================
YOUTUBE_API_KEY=
YOUTUBE_QUOTA_PER_DAY=10000
YOUTUBE_MAX_RESULTS_PER_PAGE=50
YOUTUBE_ENABLE_FALLBACK_SCRAPING=true

# ============================================================================
# Scraping Settings
# ============================================================================
SCRAPING_USE_SELENIUM=true
SCRAPING_USE_PLAYWRIGHT=false
SCRAPING_HEADLESS=true
SCRAPING_REQUEST_DELAY_SECONDS=2.0
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ============================================================================
# Analysis Settings
# ============================================================================
ANALYSIS_ENABLE_SENTIMENT=true
ANALYSIS_ENABLE_TOPIC_MODELING=true
ANALYSIS_ENABLE_TRANSCRIPT=false
ANALYSIS_MIN_COMMENT_LENGTH=10
ANALYSIS_MAX_COMMENTS_PER_VIDEO=1000

# ============================================================================
# Storage Settings
# ============================================================================
STORAGE_OUTPUT_FORMAT=json
STORAGE_ENABLE_COMPRESSION=true
STORAGE_RETENTION_DAYS=30

# ============================================================================
# Security & Rate Limiting
# ============================================================================
SECURITY_RATE_LIMIT_PER_MINUTE=60
SECURITY_RATE_LIMIT_PER_HOUR=1000
SECURITY_ENABLE_CORS=true
SECURITY_KEYS=your-security-keys