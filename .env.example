# .env.example - YouTube Web Automation Analysis Project
# Copy this file to .env and fill in your actual values

# ============================================================================
# YouTube Web Automation Analysis - Environment Configuration
# ============================================================================

# Application Settings
APP_NAME=YouTube-Web-Automation-Analysis
APP_VERSION=0.1.0
ENV=development

# API Configuration (FastAPI Server)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_DEBUG=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (Development)
DB_URL=sqlite+aiosqlite:///./youtube_analytics.db

# PostgreSQL (Production)
# DB_URL=postgresql+asyncpg://user:password@localhost:5432/youtube_analytics

DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================================================
# Cache Configuration
# ============================================================================
AI_CACHE_ROOT=../AI_LLM_projects/ai_warehouse/cache
CACHE_REDIS_ENABLE=false
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_AUTO_CLEANUP=true
CACHE_MAX_CACHE_SIZE_GB=50
CACHE_MEMORY_TTL_MINUTES=60


# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/youtube_automation.log

# ============================================================================
# YouTube Data API v3 Configuration
# ============================================================================
YOUTUBE_API_KEY=AIzaSyCS6e-Yj0srSav4X20r3ACWd0LDJ_-p8tc

# Quota Management
YOUTUBE_DAILY_QUOTA_LIMIT=10000
YOUTUBE_QUOTA_WARNING_THRESHOLD=8000

# Rate Limiting
YOUTUBE_REQUESTS_PER_SECOND=10.0
YOUTUBE_BURST_CAPACITY=20

# Request Settings
YOUTUBE_MAX_RETRIES=3
YOUTUBE_REQUEST_TIMEOUT=30
YOUTUBE_BACKOFF_BASE=2.0

# Search Defaults
YOUTUBE_DEFAULT_SEARCH_RESULTS=10
YOUTUBE_MAX_SEARCH_RESULTS=50
YOUTUBE_DEFAULT_SEARCH_ORDER=relevance

# Comment Fetching
YOUTUBE_DEFAULT_COMMENT_COUNT=100
YOUTUBE_MAX_COMMENT_COUNT=1000
YOUTUBE_DEFAULT_COMMENT_ORDER=relevance

# Caching
YOUTUBE_ENABLE_RESPONSE_CACHE=true
YOUTUBE_CACHE_TTL_SECONDS=3600

# Features
YOUTUBE_ENABLE_ADAPTIVE_RATE_LIMITING=true
YOUTUBE_ENABLE_QUOTA_TRACKING=true


# ============================================================================
# Scraping Settings
# ============================================================================

# Browser Settings
SCRAPING_USE_SELENIUM=true
SCRAPING_USE_PLAYWRIGHT=false
SCRAPING_BROWSER_TYPE=chromium
SCRAPING_HEADLESS=true

# Performance
SCRAPING_MAX_CONCURRENT_BROWSERS=3
SCRAPING_PAGE_TIMEOUT=30000
SCRAPING_NAVIGATION_TIMEOUT=30000

# Anti-Detection
SCRAPING_USE_STEALTH_MODE=true
SCRAPING_RANDOMIZE_USER_AGENT=true
SCRAPING_ENABLE_COOKIES=true
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate Limiting
SCRAPING_REQUESTS_PER_MINUTE=30
SCRAPING_MIN_DELAY_SECONDS=1.0
SCRAPING_MAX_DELAY_SECONDS=3.0
SCRAPING_REQUEST_DELAY_SECONDS=2.0

# Retry Logic
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY_SECONDS=5.0

# Proxy Settings (Optional)
SCRAPING_ENABLE_PROXY=false
SCRAPING_PROXY_LIST=

# Caching
SCRAPING_CACHE_HTML=true
SCRAPING_CACHE_SCREENSHOTS=false

# ============================================================================
# Analysis Settings
# ============================================================================
ANALYSIS_ENABLE_SENTIMENT=true
ANALYSIS_ENABLE_TOPIC_MODELING=true
ANALYSIS_ENABLE_TRANSCRIPT=false
ANALYSIS_MIN_COMMENT_LENGTH=10
ANALYSIS_MAX_COMMENTS_PER_VIDEO=1000

# ============================================================================
# Storage Settings
# ============================================================================
STORAGE_OUTPUT_FORMAT=json
STORAGE_ENABLE_COMPRESSION=true
STORAGE_RETENTION_DAYS=30

# ============================================================================
# Security & Rate Limiting
# ============================================================================
SECURITY_RATE_LIMIT_PER_MINUTE=60
SECURITY_RATE_LIMIT_PER_HOUR=1000
SECURITY_ENABLE_CORS=true
SECURITY_KEYS=your-security-keys